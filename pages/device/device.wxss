page {
    height: 100vh;
    display: flex;
    flex-direction: column;
}

.container {
    display: flex;
    flex-direction: column;
    height: 100%;
    padding-bottom: 0;
}

.content-scroll {
    flex: 1;
    width: 100%;
    overflow-y: auto;
    display: flex;
    flex-direction: column;
    padding-bottom: 20rpx;
}

.status-card {
    background: #fff;
    padding: 20rpx;
    width: 100%;
    border-bottom: 1rpx solid #eee;
    flex-shrink: 0;
}

.device-name {
    font-size: 36rpx;
    font-weight: bold;
}

.connection-status {
    font-size: 28rpx;
    margin-top: 10rpx;
}

.connected {
    color: #07c160;
}

.disconnected {
    color: #f00;
}

.status-tips {
    background: #f8f8f8;
    padding: 20rpx;
    width: 100%;
    font-size: 24rpx;
    color: #666;
    border-bottom: 1rpx solid #eee;
    flex-shrink: 0;
}

.status-tips view {
    margin-bottom: 5rpx;
}

.operation-panel {
    margin-top: 20rpx;
    background: #fff;
    padding: 20rpx;
    width: 94%;
    margin-left: 3%;
    border-radius: 10rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
    flex-shrink: 0;
}

.panel-header {
    font-size: 26rpx;
    color: #333;
    margin-bottom: 20rpx;
    border-bottom: 1rpx solid #eee;
    padding-bottom: 10rpx;
    word-break: break-all;
}

.btn-group {
    display: flex;
    gap: 20rpx;
    margin-bottom: 20rpx;
}

.write-area {
    border-top: 1rpx solid #eee;
    padding-top: 20rpx;
}

.input-box {
    border: 1rpx solid #ccc;
    padding: 10rpx;
    font-size: 28rpx;
    border-radius: 5rpx;
    margin-bottom: 10rpx;
}

.input-options {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 26rpx;
}

/* 日志区域 */
.log-area {
    margin-top: 20rpx;
    margin-left: 3%;
    width: 94%;
    background: #333;
    color: #0f0;
    padding: 20rpx;
    border-radius: 10rpx;
    flex: 1;
    /* 自动填充剩余空间 */
    min-height: 300rpx;
    /* 最小高度 */
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}

.log-header {
    display: flex;
    justify-content: space-between;
    color: #fff;
    font-size: 24rpx;
    margin-bottom: 10rpx;
    border-bottom: 1rpx solid #555;
    padding-bottom: 10rpx;
    flex-shrink: 0;
}

.clear-log {
    color: #f00;
}

.log-scroll {
    flex: 1;
    height: 0;
    width: 100%;
}

.log-item {
    font-size: 22rpx;
    margin-bottom: 5rpx;
    word-break: break-all;
    font-family: monospace;
}

.log-item.send {
    color: #ffeb3b;
}

.log-item.recv {
    color: #0f0;
}

.log-item.info {
    color: #fff;
}

.empty-log {
    color: #666;
    text-align: center;
    margin-top: 50rpx;
    font-size: 24rpx;
}

/* 底部快捷指令区域 */
.footer-commands {
    background: #fff;
    padding: 20rpx;
    width: 100%;
    border-top: 1rpx solid #eee;
    box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
    flex-shrink: 0;
    box-sizing: border-box;
    /* 适配底部安全区 */
    padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.command-grid {
    display: flex;
    flex-direction: column;
    gap: 15rpx;
}

.cmd-row {
    display: flex;
    justify-content: space-between;
    gap: 15rpx;
}

.cmd-btn {
    flex: 1;
    font-size: 26rpx;
    padding: 0;
    background: #f0f0f0;
    color: #333;
    border: 1rpx solid #ddd;
    line-height: 2.5;
    margin: 0;
}

.cmd-btn:active {
    background: #e0e0e0;
}