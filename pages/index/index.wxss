.header {
  width: 100%;
  padding: 20rpx;
  background: #fff;
  position: fixed;
  top: 0;
  z-index: 100;
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
}

.status-bar {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  text-align: center;
}

.search-btn {
  width: 100%;
}

.filter-box {
  margin-top: 20rpx;
  width: 100%;
}

.filter-input {
  background: #f5f5f5;
  padding: 0rpx 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box;
}

.device-list {
  margin-top: 260rpx; /* 增加顶部间距以适应新增的输入框 */
  width: 100%;
  padding-bottom: 40rpx;
}

.device-item {
  background: #fff;
  padding: 20rpx;
  margin: 20rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.device-info {
  flex: 1;
}

.device-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.device-id {
  font-size: 24rpx;
  color: #999;
  margin-top: 6rpx;
}

.device-rssi {
  font-size: 24rpx;
  color: #666;
  margin-top: 6rpx;
}

.device-action {
  margin-left: 20rpx;
}

.connect-text {
  color: #07c160;
  font-size: 28rpx;
  border: 1rpx solid #07c160;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}

.empty-tip {
  text-align: center;
  color: #999;
  margin-top: 100rpx;
  font-size: 28rpx;
}
